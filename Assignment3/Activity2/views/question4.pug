extends layout

block content
    h1 Survey Page 4 for #{name}
    p #{question}

    form
        #form-group
        for item in options
            input(type= 'radio', name= 'question4' value= item required) 
            | #{item}
        br
        button.btn.btn-primary(type= 'submit'  formaction= '/question/3' formmethod= 'post') Prev
        button.btn.btn-primary(type= 'submit'  formaction= '/question/5' formmethod= 'post') Next